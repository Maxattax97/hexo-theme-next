{{ partial('_partials/header/brand.njk', {}, {cache: theme.cache.enable}) }}

{%- set hasSearch = theme.algolia_search.enable or theme.local_search.enable %}

<nav class="site-nav">
  {{ partial('_partials/header/menu.njk', {}, {cache: theme.cache.enable}) }}

  {%- if theme.scheme === 'Muse' or theme.scheme === 'Mist' %}
    {% include 'sub-menu.njk' %}
  {%- endif %}
</nav>

{%- if hasSearch %}
  <div class="site-search">
    {{ partial('_partials/search/index.njk', {}, {cache: theme.cache.enable}) }}
  </div>
{%- endif %}

{{- next_inject('header') }}
